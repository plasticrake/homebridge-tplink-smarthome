{
  "name": "homebridge-tplink-smarthome",
  "displayName": "Homebridge TPLink Smarthome",
  "version": "6.4.0",
  "description": "TPLink Smarthome plugin for Homebridge",
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "tplink",
    "kasa",
    "homeautomation",
    "automation",
    "home",
    "smarthome",
    "smartplug",
    "smartswitch",
    "smartbulb"
  ],
  "bugs": {
    "url": "https://github.com/plasticrake/homebridge-tplink-smarthome/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/plasticrake/homebridge-tplink-smarthome.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/plasticrake"
  },
  "license": "MIT",
  "author": "Patrick Seal",
  "main": "lib/index.js",
  "files": [
    "config.schema.json",
    "lib"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf lib/",
    "cleancache": "rm -rf ~/.homebridge/persist && rm -rf ~/.homebridge/accessories",
    "debug": "npm run build && npm run debug:only",
    "debug:only": "homebridge --debug --user-storage-path $PWD/test/homebridge --plugin-path .",
    "debugsim": "npm run build && npm run debugsim:only",
    "debugsim:only": "homebridge --debug --user-storage-path $PWD/test/homebridge-simulator --plugin-path .",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "prepare": "npm run build",
    "release": "standard-version --sign",
    "spellcheck": "cspell '{src,test}/**/*' *.md",
    "start": "homebridge --plugin-path .",
    "pretest": "npm run lint",
    "test": "mocha",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "ajv": "^8.9.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^4.1.2",
    "lodash.castarray": "^4.4.0",
    "lodash.defaults": "^4.2.0",
    "semver": "^7.3.5",
    "tplink-smarthome-api": "^4.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/lodash.castarray": "^4.4.6",
    "@types/lodash.defaults": "^4.2.6",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.14",
    "@types/semver": "^7.3.9",
    "@types/sinon": "^10.0.9",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "chai": "^4.3.6",
    "cspell": "^5.18.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "fs-extra": "^10.0.0",
    "hap-nodejs": "^0.10.0",
    "homebridge": "^1.4.0",
    "mocha": "^9.2.0",
    "node-persist": "0.0.11",
    "prettier": "2.5.1",
    "rewire": "^6.0.0",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.3.2",
    "tplink-smarthome-simulator": "^3.1.0",
    "ts-essentials": "^9.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "homebridge": ">=1.3.0",
    "node": ">=12.20.0"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm test"
    }
  }
}
